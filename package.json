{
  "name": "meeting-transcription-tool",
  "version": "1.1.7",
  "description": "",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:main:dev\" \"npm run dev:renderer\" \"npm run start:electron\"",
    "dev:renderer": "webpack serve --mode development --config webpack.config.js",
    "start:electron": "sleep 5 && electron .",
    "build:main:dev": "webpack --mode development --config webpack.main.config.js --watch",
    "build:main": "webpack --mode production --config webpack.main.config.js",
    "build:renderer": "webpack --mode production --config webpack.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "electron": "electron .",
    "clean:cache": "rm -rf \"$HOME/Library/Application Support/meeting-transcription-tool/Cache\" \"$HOME/Library/Application Support/meeting-transcription-tool/Code Cache\" \"$HOME/Library/Application Support/meeting-transcription-tool/GPUCache\"",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/webpack-env": "^1.18.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-squirrel-startup": "^1.0.1",
    "html-webpack-plugin": "^5.6.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.13",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@google-cloud/speech": "^7.2.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@youngerheart/electron-recorder": "^0.0.0-beta.14",
    "opencc-js": "^1.0.5",
    "electron-updater": "^6.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "tailwind-merge": "^2.5.2",
    "process": "^0.11.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.meetingtranscriptiontool.app",
    "productName": "會議轉錄工具",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "resources/ffmpeg",
      "to": "ffmpeg",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "resources/credentials",
      "to": "credentials",
      "filter": [
        "**/*"
      ]
    }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64","arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64","arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "會議轉錄工具",
      "differentialPackage": false
    },
    "publish": {
      "provider": "github",
      "owner": "Janus77777",
      "repo": "meeting-recorder",
      "private": false
    }
  }
}
